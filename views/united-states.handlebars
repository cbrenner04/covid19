<h1>United States</h1>
<a href="/">Home</a>
<br /><br />

<div>
  <p><strong>Total positive:</strong> {{totalPositive}} ({{totalPercentPositive}}%)</p>
  <p><strong>Total deaths:</strong> {{totalDeaths}} ({{totalPercentDeaths}}%)</p>
  <p><strong>Percent tested:</strong> {{totalPercentTested}}%</p>
  <p><strong>Percent recovered:</strong> {{totalRecovered}} ({{totalPercentRecovered}}%)</p>
</div>

<div class="grid-container">
  <div class="grid-item" id="us-daily-positive-cases"></div>
  <div class="grid-item" id="us-daily-deaths"></div>
  <div class="grid-item" id="us-daily-percent-positive"></div>
  <div class="grid-item" id="us-daily-percent-deaths"></div>
</div>

<script src="https://cdn.plot.ly/plotly-latest.min.js"></script>
<script>
  Plotly.newPlot('us-daily-positive-cases', {{{ dailyPositiveCasesData }}}, {{{ dailyPositiveCasesLayout }}});
  Plotly.newPlot('us-daily-deaths', {{{ dailyDeathsData }}}, {{{ dailyDeathsLayout }}});
  Plotly.newPlot('us-daily-percent-positive', {{{ dailyPercentPositiveData }}}, {{{ dailyPercentPositiveLayout }}});
  Plotly.newPlot('us-daily-percent-deaths', {{{ dailyPercentDeathsData }}}, {{{ dailyPercentDeathsLayout }}});
</script>
